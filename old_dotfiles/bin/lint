#!/usr/bin/env bash

FILES=$(git diff origin/"${1-master}"... --pretty=format:"" --name-only | sed '/^$/d')

for file in $FILES
do
	echo -e "\033[32m>>> Checking $file\033[0m"
	FILENAME=$(basename "$file")
	EXT=${FILENAME##*.}

	if [[ "$EXT" == "php" ]]; then
		OUTPUT=$(php -l "$file")

		if [[ "${OUTPUT:0:25}" != "No syntax errors detected" ]]; then
			echo -e "\033[31m>>> $OUTPUT\033[0m"
		fi
	fi
done
