#!/usr/bin/env bash

paths="work/**/*.sublime-project uni/**/*.sublime-project .dotfiles/*.sublime-project Applications/**/*.sublime-project"

handle_selection() {
  if [[ $1 ]]; then
    project=$( cd ~/ || exit; ls -t "$paths" | grep "/$1.sublime" )
    touch "$project"
    subl -n "$project"
  fi
  exit 0
}

handle_selection "$( cd ~/ || exit; ls -t $paths | sed -re 's/.+\/([^\/]+)\.sublime-project/\1/' | rofi -dmenu -i -p 'subl â†  ' -hlbg '#9A6E29' -bc '#9A6E29' )"
